@using MoLibrary.UI.Services
@inject MoThemeService ThemeService
@inject IDialogService DialogService

<MudIconButton Icon="@Icons.Material.Filled.Palette" 
               Color="Color.Primary" 
               Variant="Variant.Filled"
               Size="Size.Small"
               Class="mo-theme-selector-btn"
               OnClick="OpenThemeDialog" />

@code {
    private async Task OpenThemeDialog()
    {
        var options = new DialogOptions
        {
            CloseOnEscapeKey = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true,
            CloseButton = true
        };
        
        await DialogService.ShowAsync<MoThemeDialog>("主题设置", options);
    }
}