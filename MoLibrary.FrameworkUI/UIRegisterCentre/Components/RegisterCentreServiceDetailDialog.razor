@using MoLibrary.RegisterCentre
@using MoLibrary.RegisterCentre.Models

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-3 mb-n1" />
            服务详情
        </MudText>
    </TitleContent>
    <DialogContent>
        <RegisterCentreServiceDetail Service="@Service" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cancel">关闭</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter] public RegisterServiceStatus Service { get; set; } = null!;
    
    private void Cancel() => MudDialog.Cancel();
}