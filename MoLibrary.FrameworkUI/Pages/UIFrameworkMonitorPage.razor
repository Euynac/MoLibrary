@attribute [Route(FRAMEWORK_MONITOR_DEBUG_URL)]

@using MoLibrary.FrameworkUI.UIFrameworkMonitor.Components
@using MoLibrary.Framework.Services
@inject IFrameworkMonitorService FrameworkMonitorService
@inject ISnackbar Snackbar

<MudContainer MaxWidth="MaxWidth.False"  Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">框架监控</MudText>
    
    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
        <MudTabPanel Text="项目单元" Icon="@Icons.Material.Filled.AccountTree">
            <ProjectUnitMonitor />
        </MudTabPanel>
        
        <MudTabPanel Text="架构可视化" Icon="@Icons.Material.Filled.Hub">
            <ProjectUnitVisualization />
        </MudTabPanel>
        
        <MudTabPanel Text="领域事件测试" Icon="@Icons.Material.Filled.Event">
            <DomainEventTester />
        </MudTabPanel>
        
        <MudTabPanel Text="请求过滤管理" Icon="@Icons.Material.Filled.FilterAlt">
            <RequestFilterManager />
        </MudTabPanel>
        
        <MudTabPanel Text="枚举信息" Icon="@Icons.Material.Filled.List">
            <EnumInfoViewer />
        </MudTabPanel>
    </MudTabs>
</MudContainer>

@code {
    public const string FRAMEWORK_MONITOR_DEBUG_URL = "/framework-monitor";
}